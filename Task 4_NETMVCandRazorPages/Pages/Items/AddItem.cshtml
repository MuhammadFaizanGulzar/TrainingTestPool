@page
@model Task_4_NETMVCandRazorPages.Pages.Items.AddItemModel

@{
    var message = ViewData["Message"]?.ToString();
}

<form method="post">
    <h1 class="mb-3">Add New Item</h1>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            
         @message

        </div>
    }

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="addItemRequest.Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for = "addItemRequest.Description" />
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>